<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
  <div class="container">
    <!-- Logo link -->
    <%= link_to "Restaurant Reservations", root_path, id: "logo", class: "navbar-brand" %>

    <!-- Toggle button for mobile view -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links and menu items -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <nav class="ms-auto">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link text-white" %>
          </li>

          <% if logged_in? %>
            <!-- Reservation related links (only for non-admin users) -->
            <% unless current_user.admin? %>
              <li class="nav-item">
                <%= link_to "My Reservations", reservations_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Make a Reservation", new_reservation_path, class: "nav-link text-white" %>
              </li>
            <% end %>

            <!-- Admin-only links -->
            <% if current_user.admin? %>
              <li class="nav-item">
                <%= link_to "Table Management", admin_tables_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Time Slots", admin_time_slots_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to "Admin Reservations", admin_reservations_path, class: "nav-link text-white" %>
              </li>
            <% end %>

            <!-- User profile and logout -->
            <li class="nav-item">
              <%= link_to "Profile", current_user, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "Settings", edit_user_path(current_user), class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", logout_path, method: :delete, class: "nav-link text-white" %>
            </li>
          <% else %>
            <!-- Login link -->
            <li class="nav-item">
              <%= link_to "Log in", login_path, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
