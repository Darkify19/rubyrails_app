<% provide(:title, 'Edit Table') %>

<!-- app/views/admin/tables/edit.html.erb -->
<h1>Edit Table</h1>

<%= form_with(model: @table, url: admin_table_path(@table), method: :put, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :table_number %>
    <%= form.number_field :table_number, class: 'form-control', value: @table.table_number %>
  </div>
  <div class="form-group">
    <%= form.label :max_capacity %>
    <%= form.number_field :max_capacity, class: 'form-control', value: @table.max_capacity %>
  </div>
  <div class="form-group">
    <%= form.label :availability %>
    <%= form.check_box :availability, checked: @table.availability %> Available
  </div>
  <%= form.submit 'Update Table', class: 'btn btn-warning' %>
<% end %>

<%= link_to 'Back', admin_tables_path, class: 'btn btn-secondary' %>
