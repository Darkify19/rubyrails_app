<h1>Manage Reservation</h1>

<p>
  <strong>User:</strong> <%= @reservation.user.name %><br>
  <strong>Reservation Date:</strong> <%= @reservation.reservation_date %><br>
  <strong>Time Slot:</strong> <%= @reservation.time_slot.slot_time.strftime("%I:%M %p") %><br>
  <strong>Table Number:</strong> <%= @reservation.table.table_number %><br>
  <strong>Number of People:</strong> <%= @reservation.number_of_people %><br>
  <strong>Status:</strong> <%= @reservation.status %>
</p>
<h3>Message to User:</h3>
<p><%= @reservation.message.present? ? @reservation.message : "No message" %></p>

<h3>Update Reservation Status</h3>
<%= form_with(model: @reservation, url: admin_reservation_path(@reservation), method: :put, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, ['pending', 'confirmed', 'canceled'], { prompt: "Select Status" }, class: 'form-control' %>
  </div>

  <%= form.submit "Update Status", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', admin_reservations_path, class: 'btn btn-secondary' %>
