<h1>Edit Reservation</h1>

<%= form_with(model: @reservation, url: admin_reservation_path(@reservation), method: :put, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :status, 'Reservation Status' %>
    <%= form.select :status, ['pending', 'confirmed', 'canceled'], { prompt: 'Select Status' }, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :message, 'Message to User' %>
    <%= form.text_area :message, class: 'form-control', rows: 3 %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit 'Update Reservation', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_reservations_path, class: 'btn btn-secondary mt-3' %>
