<!-- app/views/admin/time_slots/edit.html.erb -->
<h1>Edit Time Slot</h1>

<%= form_with(model: @time_slot, url: admin_time_slot_path(@time_slot), method: :put, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :slot_time %>
    <%= form.text_field :slot_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :max_reservations %>
    <%= form.number_field :max_reservations, class: 'form-control' %>
  </div>
  <%= form.submit 'Update Time Slot', class: 'btn btn-warning' %>
<% end %>
<%= link_to 'Back', admin_time_slots_path, class: 'btn btn-secondary' %>
