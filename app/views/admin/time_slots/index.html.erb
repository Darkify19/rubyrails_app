<h1>Manage Time Slots</h1>

<%= link_to 'Create New Time Slot', new_admin_time_slot_path, class: 'btn btn-primary' %>

<!-- Pagination at the top -->
<div class="pagination-top mb-3 text-end">
  <%= paginate @time_slots %>
</div>

<table class="table mt-4">
  <thead>
    <tr>
      <th>Time Slot</th>
      <th>Max Reservations</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @time_slots.each do |time_slot| %>
      <tr>
        <td><%= time_slot.slot_time.strftime("%I:%M %p") %></td> <!-- Format slot_time to AM/PM format -->
        <td><%= time_slot.max_reservations %></td>
        <td>
          <%= link_to 'Edit', edit_admin_time_slot_path(time_slot), class: 'btn btn-warning' %>

          <!-- Delete Form -->
          <%= form_with(url: admin_time_slot_path(time_slot), method: :delete, data: { confirm: 'Are you sure you want to delete this time slot?' }, local: true) do |form| %>
            <%= form.submit 'Delete', class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Pagination at the bottom -->
<div class="pagination-bottom mt-3 text-end">
  <%= paginate @time_slots %>
</div>
