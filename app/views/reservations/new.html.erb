<h1>New Reservation</h1>

<%= form_with(model: @reservation, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :reservation_date %>
    <%= form.date_field :reservation_date, class: 'form-control', min: @today %>
  </div>

  <div class="form-group">
  <%= form.label :time_slot_id, "Select Time Slot" %>
  <%= form.collection_select :time_slot_id, @time_slots, :id, :formatted_slot_time, 
      prompt: "Select a time slot", class: 'form-control', required: true %>
</div>
  <div class="form-group">
    <%= form.label :table_id, 'Table' %>
    <%= form.collection_select :table_id, @tables, :id, :table_number, { prompt: 'Select a table' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :number_of_people %>
    <%= form.number_field :number_of_people, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit 'Create Reservation', class: 'btn btn-primary' %>
  </div>
<% end %>
